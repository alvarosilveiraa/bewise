{
  "name": "bewise",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "upgrade": "npx ncu -x expo -x react -x react-dom -x next -x react-native --deep -u && yarn install",
    "db:generate": "yarn workspace @bewise/database generate",
    "db:migrate": "yarn workspace @bewise/database migrate",
    "db:revert": "yarn workspace @bewise/database revert",
    "api:dev": "yarn workspace @bewise/api dev",
    "api:build": "yarn workspace @bewise/api build",
    "api:start": "yarn workspace @bewise/api start",
    "web:dev": "yarn workspace @bewise/web dev",
    "web:build": "yarn workspace @bewise/web build",
    "web:start": "yarn workspace @bewise/web start",
    "pretty": "prettier --write .",
    "lint": "eslint . --fix",
    "test": "yarn workspaces foreach --all run test",
    "typecheck": "yarn workspaces foreach --all run typecheck",
    "checkup": "yarn && yarn pretty && yarn lint && yarn test && yarn typecheck"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "npm-check-updates": "^18.0.3",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "packageManager": "yarn@4.9.4"
}
